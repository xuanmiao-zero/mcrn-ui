{
  "presets": ["react-native"],
  "plugins": [
    "transform-class-properties",
    "babel-plugin-transform-decorators-legacy",
    ["module-resolver", {
      "root": ["./"],
      "alias": {
         "@MCRN": "mcrn",
         "MCScene":"./src/scene",
         "MCUtil":"./src/util",
         "MCComponent":"./src/component",
         "MCConfig":"./src/config",
         "MCImage": "./src/image",
         "MCAction": "./src/action",
         "MCCss": "./src/css",
         "MCReducer": "./src/reducer",
         "MCStore": "./src/store",
         "MCToast": "react-native-root-toast"
      },
      "extensions": [".js", ".ios.js", ".android.js"]
    }]
  ]
}
